<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:elevation="7dp"
        app:contentPadding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ordNo"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Order Number: 0123456"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/invNo"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:text="Invoice Number: 00000"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toBottomOf="@+id/ordNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/invDate"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:text="Invoice Date: 01/01/2021"
                android:fontFamily="@font/avenir_light"
                app:layout_constraintTop_toBottomOf="@+id/invNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>